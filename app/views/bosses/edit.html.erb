<h1>Edit your Profile</h1>

<% if @boss.errors.any? %>
  <h1><%= pluralize(@boss.errors.count, 'Error') %>
  <% @boss.errors.full_messages.each do |error| %></h1>
   <h2><%= error %></h2>
  <% end %>
<% end %>

<% if logged_in? && the_user == @boss %>
  <%= render "form" %><br>
  <%= form_tag boss_path(@boss), method: "delete", data: { confirm: "Are you sure you would like to delete this Task?" } do %>
    <%= submit_tag "Delete Profile" %>
  <% end %>
<% else %>
    <p style="color:red;">You do not have access to this page.</p>
<% end %>

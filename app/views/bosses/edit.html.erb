<h1>Edit your Profile</h1>

<%= form_for @boss do |f| %>
  <%= f.label :name, "Full name" %>
  <%= f.text_field :name %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :username %>
  <%= f.text_field :username %><br>
  <%= f.label :city %>
  <%= f.text_field :city %><br>
  <br />

  <%= f.submit "Update Profile"%>
<% end %>

<br>

<%= form_tag boss_path(@boss), method: "delete", data: { confirm: "Are you sure you would like to delete this Profile?" } do %>
  <%= submit_tag "Delete Profile" %>
<% end %>

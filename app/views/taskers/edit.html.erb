<h1>Edit Tasker Profile</h1>

<% if @tasker.errors.any? %>
  <h1><%= pluralize(@tasker.errors.count, 'Error') %>
  <% @tasker.errors.full_messages.each do |error| %></h1>
   <h2><%= error %></h2>
  <% end %>
<% end %>

<% if logged_in? && the_user == @tasker %>
  <%= render "form" %><br>
  <%= form_tag tasker_path(@tasker), method: "delete", data: { confirm: "Are you sure you would like to delete this Task?" } do %>
    <%= submit_tag "Delete Profile" %>
  <% end %>
<% else %>
    <p style="color:red;">You do not have access to this page.</p>
<% end %>

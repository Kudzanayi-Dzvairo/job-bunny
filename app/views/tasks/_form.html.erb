<%= form_for @task do |f| %>
  <%= f.label :boss_id %>
  <%= f.text_field :boss_id %><br>
  <%= f.label :time %>
  <%= f.datetime_select :time, ampm: true %><br>
  <%= f.label :location, "Location" %>
  <%= f.text_field :location %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.label :category %>
  <%= f.text_field :category %><br>
  <%= f.label :minutes, "Hours" %>
  <%= f.text_field :minutes, value: @task.hours_view %><br>
  <%= f.label :price_rate, "Price rate per hour" %>
  <%= f.text_field :price_rate, value: @task.price_rate_view %><br>
  <%= f.label :vehicle %>
  <%= f.select :vehicle, [['No', false], ['Yes', true]] %><br>
  <%= f.submit %>
  <% end %>
  <br />

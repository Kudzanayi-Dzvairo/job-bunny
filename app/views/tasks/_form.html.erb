<%= form_for @task do |f| %>
  <%= f.label :boss_id %>
  <%= f.text_field :boss_id %><br>
  <%= f.label :location, "Location" %>
  <%= f.text_field :location %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.label :category %>
  <%= f.text_field :category %><br>
  <%= f.label :minutes, "Hours" %>
  <%= f.text_field :minutes %><br>
  <%= f.label :price_rate, "Price rate per hour" %>
  <%= f.text_field :price_rate %><br>
  <%= f.label :vehicle %>
  <%= f.select :vehicle, [['No', false], ['Yes', true]] %><br>
  <%= f.submit %>
  <% end %>
  <br />

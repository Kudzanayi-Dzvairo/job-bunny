<h4>Completed Tasks: </h4>

<% @tasks.select do |task| %>
<% task.completed == true %>
<% end.each do |task| %>
<ul>
  <li>Boss: <%= link_to task.boss.name, boss_path(task.boss) %></li>
  <li>Tasker: <%= link_to task.tasker.name, tasker_path(task.tasker) %></li>
  <li>Category: <%= task.category %></li>
  <li>Description: <%= task.description %></li>
  <li>Start Time: <%= task.time_view %></li>
  <li>Location: <%= task.city %></li>
  <% if task.vehicle %>
  <li>Vehicle needed: Yes</li>
  <% else %>
  <li>Vehicle needed: No</li>
  <% end %>
  <li>Hours: <%= task.minutes / 60.0 %></li>
  <li>Price Rate per hour: $<%= task.price_rate / 100.0 %></li>
  <li>Task id: <%= task.id %></li>
</ul>
<% end %>

<h5><%= link_to "Currently Listed Tasks", tasks_path %></h5>
<br>

<h1> Create a New Task</h1>

<% if @task.errors.any? %>
  <h1><%= pluralize(@task.errors.count, 'Error') %>
  <% @task.errors.full_messages.each do |error| %></h1>
   <h2><%= error %></h2>
  <% end %>
<% end %>

<% if logged_in? && the_user.class.name == 'Boss'%>
  <%= render "form" %>
<% else %>
    <p>You do not have access to this page.</p>
<% end %>
